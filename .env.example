# Docker Compose Environment Variables
# Copy to .env and customize as needed

# =============================================================================
# Port Configuration (external:internal)
# =============================================================================
# External ports are what you access from browser/host
# Internal ports are what containers listen on (don't change these)

POSTGRES_EXTERNAL_PORT=5442
API_EXTERNAL_PORT=8030
WEB_EXTERNAL_PORT=3030

# =============================================================================
# Frontend Build Args (NEXT_PUBLIC_*)
# =============================================================================
# These are baked into the Next.js bundle at BUILD TIME, not runtime
# They must use EXTERNAL ports since they're accessed by the browser

NEXT_PUBLIC_API_URL=http://localhost:8030/api/v1
NEXT_PUBLIC_WS_URL=ws://localhost:8030/ws
