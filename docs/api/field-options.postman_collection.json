{
  "info": {
    "name": "Field Options API",
    "description": "Admin API for managing dynamic dropdown field options across entities (person, gift, occasion, list)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "field-options-api-v1"
  },
  "item": [
    {
      "name": "List Options",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/v1/field-options?entity=person&field_name=wine_types&limit=50",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "api",
            "v1",
            "field-options"
          ],
          "query": [
            {
              "key": "entity",
              "value": "person",
              "description": "Entity type (person, gift, occasion, list)"
            },
            {
              "key": "field_name",
              "value": "wine_types",
              "description": "Field name within entity"
            },
            {
              "key": "include_inactive",
              "value": "false",
              "disabled": true,
              "description": "Include soft-deleted options"
            },
            {
              "key": "skip",
              "value": "0",
              "disabled": true,
              "description": "Pagination offset"
            },
            {
              "key": "limit",
              "value": "50",
              "description": "Maximum records to return (1-1000)"
            }
          ]
        },
        "description": "Get paginated list of field options for a specific entity/field combination"
      },
      "response": []
    },
