# ============================================================================
# SECRETS TEMPLATE
# ============================================================================
# Copy this file to secrets.yaml and fill in real values
# DO NOT commit secrets.yaml to git (it's in .gitignore)
#
# Commands:
#   cp k8s/secrets.yaml.example k8s/secrets.yaml
#   # Edit secrets.yaml with real values
#   kubectl apply -f k8s/secrets.yaml
# ============================================================================
apiVersion: v1
kind: Secret
metadata:
  name: postgres-secrets
  namespace: family-gifting
  labels:
    app: postgres
    component: database
type: Opaque
stringData:
  # PostgreSQL password
  # Generate with: openssl rand -base64 32
  POSTGRES_PASSWORD: "YOUR_SECURE_PASSWORD_HERE"

---
apiVersion: v1
kind: Secret
metadata:
  name: api-secrets
  namespace: family-gifting
  labels:
    app: api
    component: backend
type: Opaque
stringData:
  # Database connection URL
  # Format: postgresql://user:password@host:port/database
  # Use the same password as POSTGRES_PASSWORD above
  DATABASE_URL: "postgresql://postgres:YOUR_SECURE_PASSWORD_HERE@postgres:5432/family_gifting"

  # JWT secret key for authentication
  # Generate with: openssl rand -base64 64
  JWT_SECRET_KEY: "YOUR_JWT_SECRET_KEY_HERE"
